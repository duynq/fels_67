<%= form_for @word do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  <%= f.fields_for :answers do |builder| %>
    <%= builder.check_box :status %>
    <%= builder.text_field :content, placeholder: t("answers") %>
  <% end %>

  <%= f.submit t("create_word"), class: "btn btn-primary" %>
<% end %>