<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, Settings.size_picture %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
 
  <div class="col-md-8">
    <% if @user.lessons.any? %>
      <h3><%= t "activities" %></h3>
      <hr>
      <ol class="lessons">
        <%= render @lessons %>
      </ol>
    <% end %>
  </div>
</div>