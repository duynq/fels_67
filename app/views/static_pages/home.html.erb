<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info" >
        <%= render "shared/user_info" %>
      </section>
    </aside>
    <div class="col-md-8">
        <%= render "shared/request" %>
    </div>
    <div class="col-md-8">
      <h3><%= t("activities") %></h3>
      <hr>
      <%= render "shared/list_lesson" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t("framgia") %></h1>
    <h2><%= t("home_welcome") %></h2>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>